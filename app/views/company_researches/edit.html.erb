<!-- Validation failure messages -->
<% if @company_research.errors.any? %>
  <% @company_research.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Company Research #<%= @company_research.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_company_research/<%= @company_research.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for article_link -->
      <div class="form-group">
        <label for="article_link" class="control-label">
          Article link
        </label>

        <input type="text" id="article_link" name="article_link" placeholder="Article link" class="form-control" value="<%= @company_research.article_link %>">
      </div>

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <input type="text" id="company_id" name="company_id" placeholder="Company" class="form-control" value="<%= @company_research.company_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @company_research.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Company Research
      </button>
      or
      <a href="/company_researches/<%= @company_research.id %>">Cancel</a>
    </form>
  </div>
</div>
