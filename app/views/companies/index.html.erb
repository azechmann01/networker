<div class="page-header">
  <h1>
    Companies
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th># of Contacts</th>
        <th>Action</th>
      </tr>

      <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= Contact.where(:user_id => current_user.id, :company_id => company.id).count  %></td>
        <td>
          <a href="/companies/<%= company.id %>" class="btn btn-primary">Contacts</a>
          <a href="/company_researches" class="btn btn-warning">Company Research</a>
          <a href="/delete_company/<%= company.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<a href="/companies/new" class="btn btn-lg btn-default">New Company</a>
