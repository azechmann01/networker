<!-- Validation failure messages -->
<% if @contact.errors.any? %>
  <% @contact.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Contact</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_contact" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

    <input type="text" id="name" name="name" placeholder="Name"     class="form-control" value="<%= @contact.name %>">
    </div>


      <!-- Hidden with the current user's ID-->
      <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>
        <select id="company_id" name="company_id" class="form-control">
          <% @companies.each do |company| %>
            <option value="<%= company.id %>"><%= company.name %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="relationship" class="control-label">
          Relationship
        </label>
      <select name="relationship" class="form-control">
        <option></option>
        <option>Booth</option>
        <option>LinkedIn 1st</option>
        <option>LinkedIn 2nd</option>
        <option>Colleague</option>
        <option>Connected</option>
      <select>
    </div>

      <button class="btn btn-success">
        Create Contact
      </button>
      or
      <a href="/contacts">Cancel</a>
    </form>
  </div>
</div>
